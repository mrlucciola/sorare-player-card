{
  "extends": "../tsconfig.json",

  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["ES2016"],

    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    // "strictFunctionTypes": true,
    "forceConsistentCasingInFileNames": true,

    "target": "ES2019", // might need to be es6 - was ES2019
    "module": "commonjs",
    // "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true

    // "paths": {
    //   "~/*": ["./*"]
    // }
  }
  // "include": ["./src"]
}
